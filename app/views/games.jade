extends layout

block content
  .row(ng-repeat='game in games')
    .col-sm-5(ng-init='team1 = loadTeam(game.team1)', ng-show='team1.name')
      team(team='team1')
    .col-sm-2
      h4.text-center {{game.timeout|date:'mm:ss'}} minute game
      h1.text-center {{game.score1}}:{{game.score2}}
      button.btn.btn-danger.center-block(ng-click='destroy(game)', title='Delete this game')
        span.glyphicon.glyphicon-trash
    .col-sm-5(ng-init='team2 = loadTeam(game.team2)', ng-show='team2.name')
      team(team='team2')
  h1(ng-hide='games.length') No games yet!
