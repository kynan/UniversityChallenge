extends layout

block content
  .row(ng-repeat='game in games')
    .span5(ng-init='team1 = loadTeam(game.team1)', ng-show='team1.name')
      .well.well-small
        h3 {{team1.name}}
        h3 {{game.score1}}
        ul
          li {{team1.player1}}
          li {{team1.player2}}
          li {{team1.player3}}
          li {{team1.player4}}
    .span5(ng-init='team2 = loadTeam(game.team2)', ng-show='team2.name')
      .well.well-small
        h3 {{team2.name}}
        h3 {{game.score2}}
        ul
          li {{team2.player1}}
          li {{team2.player2}}
          li {{team2.player3}}
          li {{team2.player4}}
